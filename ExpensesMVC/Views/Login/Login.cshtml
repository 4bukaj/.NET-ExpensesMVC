@model ExpensesMVC.Data.Login;


<div class="row content-container">
    <h1 class="text-center text-primary">Login to your account</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card-body">
            <form asp-action="Login" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }


                <div class="form-group row mb-3">
                    <label asp-for="Nick" class="col-sm-4 col-form-label font-weight-bold">NICKNAME</label>
                    <div class="col-sm-8">
                        <input asp-for="Nick" class="form-control" />
                        <span asp-validation-for="Nick" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Password" class="col-sm-4 col-form-label font-weight-bold">PASSWORD</label>
                    <div class="col-sm-8">
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-block my-3 px-4 py-1 btn-lg">Sign In</button>
                </div>
            </form>
        </div>
    </div>
</div>
