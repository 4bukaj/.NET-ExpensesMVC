@model ExpensesMVC.Data.Registration;



<div class="row content-container">
    <div class="col-md-6 offset-md-3">
            <div class="card-body">
                <h2 class="text-primary text-center mb-4">Create an account</h2>

                <form asp-action="Registration" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                    <div class="form-group row mb-3">
                        <label asp-for="Nick" class="col-sm-4 col-form-label font-weight-bold">NICKNAME</label>
                        <div class="col-sm-8">
                            <input asp-for="Nick" class="form-control" />
                            <span asp-validation-for="Nick" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="Email" class="col-sm-4 col-form-label font-weight-bold">EMAIL</label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="Password" class="col-sm-4 col-form-label font-weight-bold">PASSWORD</label>
                        <div class="col-sm-8">
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label font-weight-bold">CONFIRM PASSWORD</label>
                        <div class="col-sm-8">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-block btn-lg my-3">Sign Up</button>
                    </div>
                </form>
            </div>
    </div>
</div>
