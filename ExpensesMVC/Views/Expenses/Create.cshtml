@model ExpensesMVC.Data.Expense;

<div class="row content-container">
    <h1 class="text-center text-primary">Add new expense</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row mb-3">
                    <label asp-for="Title" class="col-md-3 col-form-label">Category</label>
                    <div class="col-md-9">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Description" class="col-md-3 col-form-label">Description</label>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Price" class="col-md-3 col-form-label">Price</label>
                    <div class="col-md-9">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group my-3 text-center">
                    <input type="submit" value="Add Expense" class="btn btn-lg btn-success px-4 py-1" />
                </div>
            </form>
        </div>
    </div>
</div>
